<% if @reminders.empty? %>
  <p>リマインド一覧がありません</p>
<% else %>
  <table>
    <tbody>
      <% @reminders.each do |reminder| %>
        <tr id="reminder-<%= reminder.id %>">
          <td><%= reminder.reminder_time.strftime("%Y年%m月%d日 %H時%M分") %></td>
          <td><%= reminder.title %></td>
          <td>
            <%= link_to '削除', deactivate_reminder_list_path(reminder), method: :patch, remote: true, data: { confirm: 'このリマインダーを削除しますか？' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>