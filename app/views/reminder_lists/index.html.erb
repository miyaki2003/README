<% if @reminders.empty? %>
  <p class="no-reminders-message">リマインドがありません</p>
<% else %>
  <div class="reminders-container">
    <% @reminders.each do |reminder| %>
      <div class="reminder-item" id="reminder-<%= reminder.id %>">
        <span class="reminder-time"><%= reminder.reminder_time.strftime("%Y年%m月%d日 %H時%M分") %></span>
        <span class="reminder-title"><%= reminder.title %></span>
        <span class="delete-button-container">
          <%= link_to deactivate_reminder_list_path(reminder), method: :patch, remote: true, class: "btn btn-danger delete-reminder-button", data: { trbo_method::delete, turbo_confirm:'このリマインダーを削除しますか？' } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
<% end %>
<%= javascript_include_tag 'reminders', "data-turbo-track": "reload" %>
